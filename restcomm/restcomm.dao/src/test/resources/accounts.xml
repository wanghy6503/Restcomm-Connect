<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
  @author thomas.quintana@telestax.com (Thomas Quintana)
-->
<mapper namespace="org.mobicents.servlet.sip.restcomm.dao.AccountsDao">
  <insert id="addAccount" parameterType="map">
    INSERT INTO "restcomm_accounts" ("sid", "date_created", "date_updated", "email_address", "friendly_name", "parent_sid", "type", "status", "auth_token", "role", "uri")
    VALUES(#{sid}, #{date_created}, #{date_updated}, #{email_address}, #{friendly_name}, #{parent_sid}, #{type}, #{status}, #{auth_token}, #{role}, #{uri});
  </insert>
  
  <select id="getAccount" parameterType="string" resultType="hashmap">
    SELECT * FROM "restcomm_accounts" WHERE "sid"=#{sid};
  </select>
  
  <select id="getAccountByFriendlyName" parameterType="string" resultType="hashmap">
    SELECT * FROM "restcomm_accounts" WHERE "friendly_name"=#{name};
  </select>
  
    <select id="getAccountByEmail" parameterType="string" resultType="hashmap">
    SELECT * FROM "restcomm_accounts" WHERE "email_address"=#{name};
  </select>
  
  <select id="getChildAccounts" parameterType="string" resultType="hashmap">
    SELECT * FROM "restcomm_accounts" WHERE "parent_sid"=#{parent_sid};
  </select>
  
  <delete id="removeAccount" parameterType="string">
    DELETE FROM "restcomm_accounts" WHERE "sid"=#{sid};
  </delete>
  
  <update id="updateAccount" parameterType="map">
    UPDATE "restcomm_accounts" SET "date_updated"=#{date_updated}, "email_address"=#{email_address}, "friendly_name"=#{friendly_name},
    "type"=#{type}, "status"=#{status}, "auth_token"=#{auth_token}, "role"=#{role} WHERE "sid"=#{sid};
  </update>

  <select id="getSubAccountSids" parameterType="java.util.List" resultType="string">
    SELECT "sid" FROM "restcomm_accounts" WHERE "parent_sid" IN
    <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
      #{item}
    </foreach>
  </select>

  <select id="getAccountPermissions" parameterType="map" resultType="hashmap">
    SELECT "restcomm_permissions"."sid", "restcomm_permissions"."name", "restcomm_accounts_permissions"."value"
    FROM "restcomm_accounts_permissions" 
    LEFT JOIN "restcomm_permissions" 
    ON "restcomm_accounts_permissions"."permission_sid" = "restcomm_permissions"."sid"
    WHERE "restcomm_accounts_permissions"."account_sid"=#{account_sid};
  </select>
</mapper>